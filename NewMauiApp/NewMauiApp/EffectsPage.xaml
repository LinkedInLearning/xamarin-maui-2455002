<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:effects="clr-namespace:NewMauiApp.Effects"
             xmlns:controls="clr-namespace:NewMauiApp.Controls"
             x:Class="NewMauiApp.EffectsPage"
             Title="EffectsPage"
             BackgroundColor="Black" FlyoutItem.IsVisible="True">
    <ContentPage.MenuBarItems>
        <MenuBarItem Text="Other Actions">
            <MenuFlyoutItem Text="Back" />
        </MenuBarItem>
    </ContentPage.MenuBarItems>
    <StackLayout>
        <Label  Text="A Text Color Effect"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Fill">
            <Label.Effects>
                <effects:TextColorEffect />
            </Label.Effects>
        </Label>
        <controls:AutoSelectEntry
                Text="Auto Select Text"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="Fill">
        </controls:AutoSelectEntry>
    </StackLayout>
</ContentPage>